doctype
html.no-js(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='css/base.css')
    link(rel='stylesheet', href='css/hipsterbg.css')
    link(href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Montserrat:400,700", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Raleway:400,700", rel="stylesheet", type="text/css")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/knockout/3.1.0/knockout-min.js")
  body
    .intro(data-bind="css: hipsterClass")
      .intro-body.container-fluid
          .row
            .col-md-8.col-md-offset-2
              h1.brand-heading Hipster BG

              section.col-md-12
                include _select_color
                include _select_location
                include _select_noise

              section.col-md-12
                pre.css-class(data-bind ="text: hipsterClass")


              section.col-md-12
                h1 Install with Bower
                pre.code
                  code $ bower install hipsterbg --save
                section.usage
      
    footer.footer.container
      .row
        .col-md-12

    script(src="js/page.js")
  