teal-start = #4b9fb7
teal-middle = #2989a4
teal-end = #057d9f

.hipsterbg
  &.teal
      background radial-gradient(ellipse at 50% 0%, teal-start 10%, teal-middle 50%,  teal-end 120%)
      &.tl
        background radial-gradient(ellipse farthest-side at top left, teal-start 10%, teal-middle 50%,  teal-end 120%)
        &.noise
          bgnoise(radial-gradient(ellipse farthest-side at top left, teal-start 10%, teal-middle 50%,  teal-end 120%))
      &.tr
        background radial-gradient(ellipse farthest-side at top right, teal-start 10%, teal-middle 50%,  teal-end 120%)
        &.noise
          bgnoise(radial-gradient(ellipse farthest-side at top right, teal-start 10%, teal-middle 50%,  teal-end 120%))
      &.bl
        background radial-gradient(ellipse farthest-side at bottom left, teal-start 10%, teal-middle 50%,  teal-end 120%)
        &.noise
          bgnoise(radial-gradient(ellipse farthest-side at bottom left, teal-start 10%, teal-middle 50%,  teal-end 120%))
      &.br
        background radial-gradient(ellipse farthest-side at bottom right, teal-start 10%, teal-middle 50%,  teal-end 120%)
        &.noise
          bgnoise(radial-gradient(ellipse farthest-side at bottom right, teal-start 10%, teal-middle 50%,  teal-end 120%))